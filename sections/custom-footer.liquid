    divChange.classList.remove("menu-links-mobile-inactive");
    imageMas.classList.remove("menu-links-mobile-active");
    imageMenos.classList.remove("menu-links-mobile-inactive");

    divChange.classList.add("menu-links-mobile-active");
    imageMas.classList.add("menu-links-mobile-inactive");
    imageMenos.classList.add("menu-links-mobile-active");
